{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "discourse",
    "labels": {
      "duo": "true"
    }
  },
  "spec": {
    "containers": [
      {
        "env": [
          {
            "name": "POSTGRES_USER",
            "value": "root"
          }
        ],
        "image": "postgres:10.5",
        "name": "my-postgres"
      },
      {
        "name": "target",
        "image": "gcr.io/athena-fuzzer/discourse:8f1bc6525d",
        "command": [
          "./run_server.sh"
        ],
        "env": [
          {
            "name": "RESULTS_PATH",
            "value": "/tmp/results"
          }
        ],
        "volumeMounts": [
          {
            "mountPath": "/tmp/results",
            "name": "results-dir"
          }
        ]
      },
      {
        "name": "athena",
        "image": "gcr.io/athena-fuzzer/athena:4",
        "env": [
          {
            "name": "TARGET_APP_PORT",
            "value": "8080"
          },
          {
            "name": "TARGET_DB_NAME",
            "value": "fuzz_db"
          },
          {
            "name": "TARGET_DB_PORT",
            "value": "5432"
          },
          {
            "name": "TARGET_DB_USER",
            "value": "root"
          },
          {
            "name": "TARGET_DB_HOST",
            "value": "localhost"
          },
          {
            "name": "TARGET_DB_PASSWORD",
            "value": "mysecretpassword"
          }
        ],
        "volumeMounts": [
          {
            "mountPath": "/tmp/results",
            "name": "results-dir"
          }
        ]
      }
    ],
    "volumes": [
      {
        "emptyDir": {},
        "name": "results-dir"
      }
    ]
  }
}
