{
    "apiVersion": "apps/v1",
    "kind": "DaemonSet",
    "metadata": {
        "name": "mongodb-daemonset"
    },
    "spec": {
        "selector": {
            "matchLabels": {
                "mongodb": "true"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "mongodb": "true"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "mongodb",
                        "image": "mongo:3.6.11-stretch"
                    }
                ]
            }
        }
    }
}
