{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "name": "discourse"
  },
  "spec": {
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "duo": "true"
        }
      },
      "spec": {
        "containers": [
          {
            "env": [
              {
                "name": "POSTGRES_USER",
                "value": "root"
              }
            ],
            "image": "postgres:10.5",
            "name": "my-postgres",
            "volumeMounts": [
              {
                "mountPath": "/var/run/postgresql",
                "name": "postgres-socket"
              }
            ]
          },
          {
            "command": [
              "./run-server.sh"
            ],
            "env": [
              {
                "name": "FUZZ_DB",
                "value": "FUZZ_DB"
              },
              {
                "name": "PORT",
                "value": "8080"
              },
              {
                "name": "RESULTS_PATH",
                "value": "/tmp/results"
              }
            ],
            "image": "gcr.io/athena-fuzzer/discourse:4",
            "name": "target",
            "volumeMounts": [
              {
                "mountPath": "/var/run/postgresql",
                "name": "postgres-socket"
              },
              {
                "mountPath": "/tmp/results",
                "name": "results-dir"
              }
            ]
          },
          {
            "name": "athena",
            "image": "gcr.io/athena-fuzzer/athena:2",
            "command": ["/bin/bash"],
            "args": ["-c", "while true; do sleep 10000; done"],
            "volumeMounts": [
              {
                "mountPath": "/var/run/postgresql",
                "name": "postgres-socket"
              },
              {
                "mountPath": "/tmp/results",
                "name": "results-dir"
              }
            ]
          }
        ],
        "volumes": [
          {
            "emptyDir": {},
            "name": "postgres-socket"
          },
          {
            "emptyDir": {},
            "name": "results-dir"
          }
        ]
      }
    }
  }
}
